{
  "version": "0.1.0",
  "manifest_version": 3,
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "./images/replace-icon.png",
    "48": "./images/replace-icon.png",
    "128": "./images/replace-icon.png"
  },
  "name": "WebEdit Pro",
  "description": "WebEdit Pro",
  "permissions": ["storage"],
  "host_permissions": ["https://*/*"],
  "background": {
    "service_worker": "./background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["./content.js"]
    }
  ]
}
